@model Product
@{
    ViewData["Title"] = "Update";
}


<form method="post">
    <h1>Cập nhật sản phẩm</h1>
    <br />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" asp class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" id="exampleInputPassword1">
        <span asp-validation-for="Amount" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" id="exampleInputPassword1">
        <span asp-validation-for="Price" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" id="exampleInputPassword1">
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Trở lại</a>
</form>

